<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectmenubg"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settingactionbar"
            android:background="@null"
            android:scaleType="fitXY"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volumn  |"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />

                <ImageButton
                    android:id="@+id/button_happy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/happy"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"
                    />

                <ImageButton
                    android:id="@+id/button_veryhappy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/veryhappy"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>

                </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shake     |"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />

                <ImageButton
                    android:id="@+id/button_softshake"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/softshake"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:id="@+id/button_hardshake"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hardshake"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light       |"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />

                <ImageButton
                    android:id="@+id/button_lighton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/lighton"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:id="@+id/button_lightoff"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/lightoff"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/white"
            android:background="@drawable/done_button"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>